<h3>Newspaper Boxes List</h3>

<div class="row">
  <div class="col-md-4">
    <%= button_to 'New Newspaper box', new_newspaper_box_path, method: :get%>
  </div>
  <div class="col-md-4">
    <%= button_to 'Export Data', export_data_newspaper_boxes_path, method: :get%>
  </div>
  <div class="col-md-4">
    <strong class="amount-text">Newspaper Boxes Amount: <%= @newspaper_boxes.count%></strong>
  </div>
</div>
</br>

<%= render "query_form" %>
<% if @selected_trash %>
  <%= render "trash_list"%>
<% else %>
  <%= render "box_list" %>
<% end %>

<br>

<script>
  $(document).ready(function(){
    $('.best_in_place').best_in_place();
  })
</script>
