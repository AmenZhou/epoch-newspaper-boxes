= render partial: 'chart', locals: { title: 'Boroughs', report: @report, chart_id: 'piechart_3d'}

= render partial: 'chart', locals: { title: 'Queens Areas', report: @report_queens, chart_id: 'piechart2_3d'}

= render partial: 'chart', locals: { title: 'Boroughs Weekday Average', report: @weekday_average, chart_id: 'piechart3_3d'}

= render partial: 'chart', locals: { title: 'Boroughs Weekend Average', report: @weekend_average, chart_id: 'piechart4_3d'}

= render partial: 'chart', locals: { title: 'Boroughs Friday', report: @fri, chart_id: 'piechart5_3d'}

= render partial: 'chart', locals: { title: 'Boroughs Saturday', report: @sat, chart_id: 'piechart6_3d'}

= render partial: 'chart', locals: { title: 'Deliver Type Percentage', report: @all_deliver_type_percentage, chart_id: 'piechart7_3d'}

= render partial: 'chart', locals: { title: 'Queens Deliver Type Percentage', report: @queens_deliver_type_percentage, chart_id: 'piechart8_3d'}

= render partial: 'chart', locals: { title: 'Manhattan Deliver Type Percentage', report: @manhattan_deliver_type_percentage, chart_id: 'piechart9_3d'}

= render partial: 'chart', locals: { title: 'Brooklyn Deliver Type Percentage', report: @brooklyn_deliver_type_percentage, chart_id: 'piechart10_3d'}

