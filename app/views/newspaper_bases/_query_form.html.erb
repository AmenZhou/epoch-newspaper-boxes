<%= form_tag(eval("#{controller.controller_name}" + "_path"), method: :get, class: 'form-inline') do %>
  <label>Search by:</label>
  <label>Zip Code:</label> 
  <%= select_tag 'zip_code', options_for_select(model_name.zipcode_list, @selected_zip_code), prompt: 'All', class: 'form-control' %>
  <label>City:</label>
  <%= select_tag 'city', options_for_select(model_name.city_list, @selected_city), prompt: 'All', class: 'form-control' %>
  <label>borough:</label>
  <%= select_tag 'borough', options_for_select(model_name.borough_list, @selected_borough), prompt: 'All', class: 'form-control' %>
  <label>Address:</label>
  <%= text_field_tag 'address', nil,  class: 'form-control' %>
  <label>Trash Bin:</label>
  <%= check_box_tag 'trash', true, @selected_trash, class:'form-control' %>
  <%= button_tag 'submit', class:'btn btn-default'%>
<% end %>